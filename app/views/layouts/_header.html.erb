<header class="navbar fixed-top">
  <div class="container">
    <div>
      <a href="/" class="logo">
        <i class="fas fa-city" aria-hidden="true"></i>
        MOVE
      </a>
    </div>
    <div>
      <ul class="nav">
        <li>
          <a href="/about">
            <i class="far fa-question-circle" aria-hidden="true"></i>
            <span>MOVEとは？</span>
          </a>
        </li>
        <% if logged_in? %>
          <li>
            <%= link_to "ユーザー一覧", users_path %>
          </li>
          <li>
            <%= link_to "プロフィール", user_path(current_user) %>
          </li>
          <li>
            <%= link_to "編集", edit_user_path(current_user) %>
          </li>
          <li>
            <a href="/logout", data-method="delete">
              <button>
                ログアウト
              </button>
            </a>
          </li>
        <% else %>
          <li>
            <a href="/signup">
              <i class="fas fa-user-plus" aria-hidden="true"></i>
              <span>ユーザー登録（無料）</span>
            </a>
          </li>
          <li>
            <a href="/login">
              <button>
                ログイン
              </button>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>